<%= content_for :title, "Status do pagamento" %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">

      <div class="card">
        <div class="card-header">
          <h5 class="card-title">Informações do Pagamento</h5>
        </div>
        <div class="card-body">
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><strong>Nome:</strong> <%= @payment.customer.name %></li>
            <li class="list-group-item"><strong>Email:</strong> <%= @payment.customer.email %></li>
            <li class="list-group-item"><strong>Valor Pago:</strong> R$ <%= @payment.amount %></li>
            <li class="list-group-item"><strong>Descrição:</strong> <%= @payment.description %></li>
          </ul>
        </div>
      </div>

      <div class="mt-4 text-center">
        <%= link_to 'Voltar', root_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
